          }
        },
        {
          "phase": "metadata_appear",
          "duration": "400ms",
          "delay": "200ms",
          "animation": "fade-in-with-slide",
          "easing": "entrance"
        }
      ],
      "total_duration": "1400ms",
      "best_practice": "Stagger reveals to guide user attention through findings progressively",
      "accessibility": {
        "reduced_motion": {
          "instant_reveal": true,
          "static_confidence": true
        }
      }
    },
    "abnormality_alert": {
      "severity_levels": {
        "low": {
          "color": "#FBBF24",
          "animation_easing": "standard",
          "duration": "normal"
        },
        "medium": {
          "color": "#F97316",
          "animation_easing": "emphasis",
          "duration": "fast"
        },
        "high": {
          "color": "#EF4444",
          "animation_easing": "emphasis",
          "duration": "fast",
          "pulse_intensity": "stronger"
        }
      },
      "animation_pattern": "gentle-pulse-with-glow",
      "pulse_count": 3,
      "accessibility": {
        "reduced_motion": {
          "no_pulse": true,
          "static_indication": true,
          "rely_on_color": false,
          "add_icon": true
        }
      }
    },
    "comparison_transition": {
      "description": "Smooth transition between baseline and current scans",
      "animation": {
        "type": "cross-fade-or-slide",
