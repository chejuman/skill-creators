        }
      }
    },
    "report_generation_progress": {
      "stages": [
        {
          "stage": "data_collection",
          "label": "Collecting findings...",
          "duration": "1000ms",
          "icon_animation": "rotate"
        },
        {
          "stage": "formatting",
          "label": "Formatting report...",
          "duration": "800ms",
          "icon_animation": "pulse"
        },
        {
          "stage": "finalizing",
          "label": "Finalizing...",
          "duration": "500ms",
          "icon_animation": "scale"
        }
      ],
      "color_progression": "#3B82F6",
      "accessibility": {
        "reduced_motion": {
          "all_instant": true,
          "text_only": true
        }
      }
    }
  },
  "accessibility_guidelines": {
    "prefers_reduced_motion": {
      "media_query": "@media (prefers-reduced-motion: reduce)",
      "rules": [
        "Set all animation durations to 0ms or instant",
        "Use linear easing only",
        "Remove scale and transform animations",
        "Rely on opacity changes instead",
        "Remove stagger delays",
        "Remove parallax effects"
      ],
      "implementation": {
        "js_detection": "window.matchMedia('(prefers-reduced-motion: reduce)').matches",
        "css_variables": {
          "animation_duration": "var(--animation-duration)",
          "animation_easing": "var(--animation-easing)"
        }
      }
    },
    "color_contrast": {
      "focus_indicator": "Minimum 3:1 contrast ratio",
      "animation_color": "Do not rely solely on animated color changes for important information",
      "alert_states": "Combine animated glow with icon or pattern change"
    },
    "motion_sickness_prevention": {
      "avoid": [
        "Excessive parallax",
        "Rapid flashing (>3Hz)",
        "Extreme scale transforms",
        "Spinning animations without clear purpose",
        "Complex morphing transitions"
      ],
      "use_instead": [
        "Subtle, purposeful motion",
        "Linear animations when possible",
        "Opacity-based transitions",
        "Horizontal/vertical movement only"
      ]
    },
    "screen_reader_support": {
      "live_regions": "Announce loading states and status changes",
      "aria_labels": "Use aria-label for animated buttons and state changes",
      "semantic_html": "Ensure animated elements have proper semantic meaning"
    },
    "testing_checklist": [
      "Test with prefers-reduced-motion enabled",
      "Verify keyboard navigation is smooth",
      "Check color contrast of animated elements",
      "Test on low-end devices for performance",
      "Verify screen reader announces state changes",
      "Test with various connection speeds"
    ]
  },
  "performance_optimization": {
    "best_practices": [
      "Use transform and opacity properties (GPU accelerated)",
      "Avoid animating: width, height, position (triggering reflow)",
      "Use will-change CSS property sparingly",
      "Batch animations on same timeline when possible",
      "Debounce scroll and resize animations"
    ],
    "gpu_acceleration": {
      "use_transforms": "translateX, translateY, scale, rotate",
      "use_opacity": "opacity changes are GPU-optimized",
      "avoid": "Left, right, top, bottom properties"
    },
    "mobile_optimization": {
      "reduce_duration": "150ms instead of 250ms on mobile",
      "disable_complex_animations": "On devices with low performance",
      "use_prefers_reduced_motion": "Query system preference on load",
      "test_device_battery": "Avoid animations when in low power mode"
    },
    "monitoring": {
      "frame_rate_target": "60fps (16.67ms per frame)",
      "performance_budget": "Max 200ms visible delay",
      "tools": ["Chrome DevTools Performance", "Lighthouse", "WebPageTest"]
    }
  },
  "implementation_examples": {
    "css_variables": {
      "description": "Use CSS custom properties for consistent animation configuration",
      "variables": {
        "--duration-fast": "150ms",
        "--duration-normal": "250ms",
        "--duration-slow": "350ms",
        "--duration-slower": "500ms",
