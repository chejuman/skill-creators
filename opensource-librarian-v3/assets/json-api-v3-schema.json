{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opensource-librarian.v3/api-response",
  "title": "Open Source Librarian V3 API Response",
  "description": "Schema for structured JSON API v3 responses with validation",
  "type": "object",
  "properties": {
    "apiVersion": {
      "const": "v3",
      "description": "API version identifier"
    },
    "metadata": {
      "type": "object",
      "description": "Response metadata",
      "properties": {
        "generated": {
          "type": "string",
          "format": "date-time"
        },
        "query": {
          "type": "string"
        },
        "classification": {
          "type": "string",
          "enum": ["TYPE_A", "TYPE_B", "TYPE_C", "TYPE_D"]
        },
        "workersUsed": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20
        },
        "executionTimeMs": {
          "type": "integer",
          "minimum": 0
        },
        "validationPassed": {
          "type": "boolean"
        },
        "language": {
          "type": "string",
          "enum": ["en", "ko", "bilingual"],
          "default": "bilingual"
        }
      },
      "required": [
        "generated",
        "query",
        "classification",
        "workersUsed",
        "validationPassed"
      ]
    },
    "summary": {
      "type": "object",
      "properties": {
        "en": {
          "type": "string",
          "maxLength": 500
        },
        "ko": {
          "type": "string",
          "maxLength": 500
        }
      },
      "required": ["en", "ko"]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^F[0-9]{3}$"
          },
          "claim": {
            "type": "object",
            "properties": {
              "en": { "type": "string" },
              "ko": { "type": "string" }
            },
            "required": ["en", "ko"]
          },
          "evidence": {
            "type": "object",
            "properties": {
              "permalink": {
                "type": "string",
                "format": "uri",
                "pattern": "^https://github\\.com/.+/blob/[a-f0-9]{7,40}/.+#L[0-9]+"
              },
              "sha": {
                "type": "string",
                "minLength": 7,
                "maxLength": 40,
                "pattern": "^[a-f0-9]+$"
              },
              "repository": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9_-]+/[a-zA-Z0-9_.-]+$"
              },
              "path": { "type": "string" },
              "lines": {
                "type": "object",
                "properties": {
                  "start": { "type": "integer", "minimum": 1 },
                  "end": { "type": "integer", "minimum": 1 }
                },
                "required": ["start", "end"]
              }
            },
            "required": ["permalink", "sha"]
          },
          "snippet": {
            "type": "string",
            "maxLength": 2000
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "validated": {
            "type": "boolean"
          }
        },
        "required": ["id", "claim", "evidence", "validated"]
      }
    },
    "history": {
      "type": "object",
      "properties": {
        "timeline": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "date": { "type": "string", "format": "date" },
              "eventType": {
                "type": "string",
                "enum": ["issue", "pr", "commit", "discussion"]
              },
              "reference": { "type": "string" },
              "title": { "type": "string" },
              "summary": { "type": "string" },
              "link": { "type": "string", "format": "uri" }
            }
          }
        },
        "keyDecisions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "decision": { "type": "string" },
              "rationale": { "type": "string" },
              "evidenceLink": { "type": "string", "format": "uri" },
              "participants": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "contributors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "role": { "type": "string" },
              "commits": { "type": "integer" }
            }
          }
        }
      }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["code", "docs", "issue", "pr", "discussion", "web"]
          },
          "url": { "type": "string", "format": "uri" },
          "title": { "type": "string" },
          "relevance": { "type": "string" }
        },
        "required": ["type", "url", "title", "relevance"]
      }
    },
    "validation": {
      "type": "object",
      "properties": {
        "passed": { "type": "boolean" },
        "findingsChecked": { "type": "integer" },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "findingId": { "type": "string" },
              "issueType": { "type": "string" },
              "message": { "type": "string" },
              "severity": {
                "type": "string",
                "enum": ["critical", "warning", "info"]
              }
            }
          }
        },
        "qualityScore": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": ["passed", "qualityScore"]
    }
  },
  "required": [
    "apiVersion",
    "metadata",
    "summary",
    "findings",
    "sources",
    "validation"
  ]
}
