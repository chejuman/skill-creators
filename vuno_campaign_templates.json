        "accuracy_metrics_standard": [
          {
            "metric": "Sensitivity",
            "definition": "Ability to identify true positive cases",
            "format": "Percentage with confidence interval"
          },
          {
            "metric": "Specificity",
            "definition": "Ability to identify true negative cases",
            "format": "Percentage with confidence interval"
          },
          {
            "metric": "Area Under Curve (AUC)",
            "definition": "Overall diagnostic performance measure",
            "format": "Decimal 0-1 or percentage 0-100"
          },
          {
            "metric": "Positive Predictive Value (PPV)",
            "definition": "Probability diagnosis is correct if positive",
            "format": "Percentage"
          },
          {
            "metric": "Negative Predictive Value (NPV)",
            "definition": "Probability diagnosis is correct if negative",
            "format": "Percentage"
          }
